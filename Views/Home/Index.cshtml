@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <style>
        #map{
            height: 400px;
            width: 100%;
        }
    </style>
}

<h1>My Google Map</h1>

<div id="map"></div>


@section Scripts{
    <script>
        function initMap(){
            var options = {
                zoom: 8,
                center: {lat:35.0420, lng:-89.6645}
            }

            var map = new google.maps.Map(document.getElementById("map"), options);

            var marker = new google.maps.Marker({
                position: {
                    lat:35.0420,
                    lng:-89.6645
                },
                map: map,
                icon:'https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png'
            })
        }
    </script>

    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDV6wRm513noTkjh0DgvAoRvZlPtXmzAKY&callback=initMap&libraries=&v=weekly"
      async
    ></script>
}

